<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="font">@font/kamerik_205_book</item>
    </style>

    <style name="input_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textCapWords</item>
        <item name="font">@font/kamerik_205_book</item>
    </style>

    <style name="input_form_data" parent="input_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_dk_1</item>
        <item name="android:textColorHint">@color/gray_dk_3</item>
        <item name="font">@font/kamerik_205_book</item>
    </style>

    <style name="spinnerWhite" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="font">@font/kamerik_205_book</item>
    </style>

    <style name="inputTheme">
        <item name="colorAccent">@color/gray_dk_2</item>
        <item name="colorControlNormal">@color/gray_dk_2</item>
        <item name="colorControlActivated">@color/gray_dk_2</item>
        <item name="colorControlHighlight">@color/gray_dk_2</item>
    </style>

    <style name="inputThemeWhite">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="label_text">
        <item name="font">@font/kamerik_205_book</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_primary">
        <item name="font">@font/kamerik_205_book</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/dim_48dp</item>
        <item name="android:paddingRight">@dimen/dim_48dp</item>
    </style>

    <style name="btn_white" parent="btn_primary">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppCompatViewPager">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

</resources>