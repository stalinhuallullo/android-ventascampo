<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_login"
    android:id="@+id/v_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dim_16dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/icon_login"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dim_16dp"
                android:paddingBottom="@dimen/dim_16dp"
                android:orientation="vertical">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_olvide_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_16dp"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="Ingrese su correo electrónico para recuperar su contraseña:"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_usuario"
                    style="@style/input_form"
                    android:layout_marginBottom="@dimen/dim_8dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"/>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_enviar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/btn_primary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:text="Recuperar contraseña"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>