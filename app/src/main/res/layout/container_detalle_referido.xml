<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dim_16dp">

            <android.support.v7.widget.AppCompatTextView
                style="@style/label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_16dp"
                android:text="Proceso de verificación"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dim_16dp"
                android:paddingTop="@dimen/dim_16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Datos Enviados: "
                        android:textSize="16sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_datos_enviados"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toLeftOf="@id/v_datos_enviadosx"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_datos_enviadosx"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v_datos_enviados_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:background="@drawable/borderdetalle"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_datos_enviados_text"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Sin Obs."
                        android:textSize="16sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Evaluación: "
                        android:textSize="16sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_calificacion"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toLeftOf="@id/v_calificacionx"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_calificacionx"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v_calificacion_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:background="@drawable/borderdetalle"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_calificacion_text"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Sin Obs."
                        android:textSize="16sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Venta Exitosa: "
                        android:textSize="16sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_venta_exitosa"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toLeftOf="@id/v_venta_exitosax"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_venta_exitosax"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v_venta_exitosa_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:background="@drawable/borderdetalle"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_venta_exitosa_text"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"

                        android:text="Sin Obs."
                        android:textSize="16sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ultimo_paso"
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"
                        android:text="Entregado: "
                        android:textSize="16sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_entregado"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_toLeftOf="@id/v_entregadox"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_entregadox"
                        style="@style/label_text"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/borderdetalle"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_v_entregado_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_16dp"
                    android:layout_marginRight="@dimen/dim_16dp"
                    android:layout_marginTop="@dimen/dim_8dp"
                    android:background="@drawable/borderdetalle"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/v_entregado_text"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_8dp"

                        android:text="Sin Obs."
                        android:textSize="16sp"
                        />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/ll_acumulado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_16dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_32dp"
                        android:text="Felicitaciones"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_acumulado"
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dim_8dp"
                        android:text="Acumulaste S/00.00"
                        android:textSize="20sp"/>
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_mensaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/gray_dk_3"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_mensaje"
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/dim_8dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>